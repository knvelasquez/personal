	files_array = new Array();
	position_array =  new Array();
	
	  
	function getCookie(cname) {
		if(cname == "files")
			return files_array;
		else if(cname == "position")
			return files_array;
	}

	function setCookie(cname, cvalue) {
		if(cname == "files")
			files_array = cvalue;
		else if(cname == "position")
			position_array = cvalue;
	}


	
	var allowed = 10;

	var noFiles = 0;


